{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "infra/*": [
        "./infra/*"
      ]
    },
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": [
      "jest",
      "node"
    ],
    "moduleResolution": "nodenext"
  },
   "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tests/**/*.ts",
    "infra/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
