{
  "name": "tech-news",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migration:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "ts-node infra/scripts/wait-for-postgres.ts",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "test": "npm run services:up && concurrently --hide next --names next,jest -k --success command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --runInBand --watchAll",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "prepare": "husky",
    "commit": "cz"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "next": "16.0.6",
    "node-pg-migrate": "7.6.1",
    "pg": "8.16.3",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@types/async-retry": "1.4.9",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "@types/pg": "8.15.6",
    "@types/react": "19.2.7",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.39.1",
    "eslint-config-next": "16.0.6",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.2.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "prettier": "3.7.3",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
